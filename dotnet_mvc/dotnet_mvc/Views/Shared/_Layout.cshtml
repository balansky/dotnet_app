<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_mvc</title>
</head>

<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        var ViewData = @Html.Raw(JsonConvert.SerializeObject(ViewData));
    </script>
    <script src='@ViewData["Script"]' asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
